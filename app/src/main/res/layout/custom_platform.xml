<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#ebebeb" >

    <LinearLayout
        android:id="@+id/ll_customplatform"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/wechat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/sns_icon_22_b" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/wechat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="微信"
                android:textColor="#333333"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/wechat_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/sns_icon_23_b" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/wechat_circle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="微信朋友圈"
                android:textColor="#333333"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/sms"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/sns_icon_192x_b" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/sms"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="短信"
                android:textColor="#333333"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_customplatform2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/ll_customplatform"
        android:layout_marginTop="12dp"
        android:numColumns="3"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/qq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/sns_icon_24_b" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/qq"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="QQ"
                android:textColor="#333333"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/qq_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/sns_icon_6_b" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/qq_circle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="QQ空间"
                android:textColor="#333333"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible" >

            <ImageButton
                android:id="@+id/email"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/sns_icon_182_b" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="电子邮件"
                android:textColor="#333333"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_customplatform2"
        android:layout_marginTop="20dp"
        android:background="#ebebeb" />

    <TextView
        android:id="@+id/share_cancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/divider_line"
        android:gravity="center"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="16sp" />

</RelativeLayout>