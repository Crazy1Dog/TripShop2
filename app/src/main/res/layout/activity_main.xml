<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2B2B2" >
    </FrameLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eeffffff"
        >

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="3dp"
            android:background="@mipmap/tab_talk_numbers"
            android:gravity="center"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:visibility="visible" />
		<View
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="#ededed"/>
        <RadioGroup
            android:id="@+id/rg_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp" 
            >

            <RadioButton
                android:id="@+id/rb_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/message_selector"
                android:gravity="center_horizontal"
                android:drawablePadding="0dp"
                android:text="消息"
                android:textSize="10sp" 
                android:textColor="#8D8D8D"/>

            <RadioButton
                android:id="@+id/rb_findLine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/findline_selector"
                android:gravity="center_horizontal"
                android:drawablePadding="0dp"
                android:text="找旅游"
                android:textSize="10sp" 
                android:textColor="#8D8D8D"/>

            <RadioButton
                android:id="@+id/rb_personal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/personal_selector"
                android:gravity="center_horizontal"
                android:drawablePadding="0dp"
                android:text="个人中心"
                android:textSize="10sp" 
                android:textColor="#8D8D8D"
                />
        </RadioGroup>
    </RelativeLayout>

</RelativeLayout>