<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFAFA"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF8F8F8"
            android:visibility="visible"
            >
             <Button 
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_centerVertical="true"
            android:background="#00ffffff"
            android:textSize="16sp"
            android:textColor="#29ccb8"
            android:text="搜索"/>
        <EditText 
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:paddingLeft="8dp"
            android:background="@drawable/connect_shape"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="13dp"
            android:hint="请输入关键字"
            android:textSize="14sp"
            android:textColor="#333333"
            android:drawableLeft="@mipmap/search_bar_icon"
            android:layout_toLeftOf="@id/btn_search"/>
        </RelativeLayout>
      
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="#f1f2f6"
        android:paddingLeft="16dp"
        android:textColor="#8e8e92"
        android:textSize="14sp"
        android:text="热门搜索"/>

    <GridView
        android:id="@+id/hot_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="6dp"
        android:paddingBottom="16dp"
        android:background="#f8f8f8"
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:verticalSpacing="10dp" >
    </GridView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="#f1f2f6"
        android:paddingLeft="16dp"
        android:textColor="#8e8e92"
        android:textSize="14sp"
        android:text="历史搜索"/>
    <ListView 
        android:id="@+id/lv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:divider="#00000000">
    </ListView>
    <Button 
	    android:id="@+id/btn_clearhistory"
	    android:layout_width="wrap_content"
	    android:layout_height="50dp"
	    android:layout_marginTop="16dp"
	    android:background="#00ebebeb"
	    android:drawableLeft="@mipmap/search_icon_empty"
	    android:layout_gravity="center_horizontal"
	    android:drawablePadding="8dp"
	    android:textSize="14sp"
	    android:textColor="#29ccb8"
	    android:text="清除搜索历史"/>
    

</LinearLayout>
