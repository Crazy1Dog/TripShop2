<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/main_layout" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/line_quanbu" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="#FF50D2C2"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/dingdan_pic_title_pointwhite" />

                <TextView
                    android:id="@+id/order_zhifu_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/dingdan_pic_title_pointwhite" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_state_layout"
                android:layout_width="fill_parent"
                android:layout_height="78dip"
                android:background="#FFF8F8F8"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/order_state_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text=""
                    android:textColor="#FFEA5568"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="#FFEDEDED"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/order_state_Imbt"
                    android:layout_width="10dip"
                    android:layout_height="match_parent"
                    android:background="#FF50D2C2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="订单号:"
                    android:textColor="#FF262626"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/line_ordercode_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text=""
                    android:textColor="#FF262626"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="#FFEDEDED"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_quxiao_txt"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="#f00"
                        android:gravity="center"
                        android:text="取消订单"
                        android:textColor="#FF50D2C2"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="78dip"
                android:background="#FFF8F8F8"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lineyuding_biaoti_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="2月】海口往返【蔚蓝海岸5天4晚】兴隆1晚挂四温泉酒+...."
                    android:textColor="#FF4A4A4A"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/dingdan_pic_title_point" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:text="联系及出游人信息"
                        android:textColor="#FF50D2C2"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@mipmap/dingdan_pic_title_point" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="#FFF8F8F8"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="10dip"
                            android:layout_height="match_parent"
                            android:background="#FF50D2C2" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系人   "
                                android:textColor="#FF7E7E7E"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/order_contact_name_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="王大海"
                                android:textColor="#FF000000"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/order_contact_mobile_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:text="18501796204"
                                android:textColor="#FF000000"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                   <!--  <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_marginBottom="00.0dip"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@color/line_quanbu" /> -->

                    <!-- <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="出游时间"
                                android:textColor="#FF7E7E7E"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/order_contact_gotime_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2015-04-5"
