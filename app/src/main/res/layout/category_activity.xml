<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#00000000"
        >
        <Button 
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/nav_back_green"
            />
        <EditText 
            android:id="@+id/et_search_category"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_back"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/connect_shape"
            android:layout_marginLeft="10dp"
            android:hint="搜索"
            android:textSize="14sp"
            android:textColor="#333333"
            android:drawableLeft="@mipmap/search_bar_icon"
            />
 
        <TextView 
            android:id="@+id/tv_catergory_title"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="#3C3F46"
            android:text="加载中..."
            android:gravity="center"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ededed"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout 
            android:id="@+id/ll_change"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
             android:gravity="center"
            >
             <ImageView 
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_icon_down"/>
        </LinearLayout>
       
        <View 
            android:id="@+id/colorview"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/ll_change"
            android:background="#ededed"/>
        <HorizontalScrollView 
            android:id="@+id/hsv_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/colorview"
           android:background="#ffffff"
            android:scrollbars="none">
            <RadioGroup 
                android:id="@+id/rg_title"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="#FFFFFF"
	            android:orientation="horizontal">
            </RadioGroup>
        </HorizontalScrollView>
        
        <View 
            android:id="@+id/titlebottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#ededed"/>
    </RelativeLayout>
    <com.chiyu.shopapp.view.MyViewPager
        android:id="@+id/vp_searchs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
    </com.chiyu.shopapp.view.MyViewPager>
    
	
</LinearLayout>
