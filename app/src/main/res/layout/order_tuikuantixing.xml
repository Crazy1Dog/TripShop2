<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/main_layout" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/order_state_layout"
                android:layout_width="fill_parent"
                android:layout_height="78dip"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/order_state_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="您的退款信息已提交，请耐心等待！"
                    android:textColor="#FFEA5568"
                    android:textSize="14sp" />
            </LinearLayout>

          

               

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/dingdan_pic_title_point" />

                        <TextView
                            android:id="@+id/tixing_yinhangxinxi_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="30dip"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:text="银行帐号"
                            android:textColor="#FF50D2C2"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:background="@mipmap/dingdan_pic_title_point" />
                    </LinearLayout>
             

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="#FFF8F8F8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:layout_width="10dip"
                        android:layout_height="match_parent"
                        android:background="#FF50D2C2" />

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tixing_kaihu_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开户行   "
                            android:textColor="#FF000000"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/order_kaihuhang_edtxt"
                            android:layout_width="200dp"
                            android:layout_height="35dp"
                            android:paddingLeft="@dimen/dp_10"
                             android:gravity="center_vertical"
                            android:text=""
                            android:textColor="#FF9F9F9F"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginBottom="00.0dip"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/line_quanbu" />

                <LinearLayout
                    android:id="@+id/tixing_yinhang_layout"
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:background="#FFF8F8F8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tixing_yinhangkahao_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="银行卡号   "
                            android:textColor="#FF000000"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/order_yinhanghangka_edtxt"
                            android:layout_width="200dp"
                            android:layout_height="35dp"
                            android:paddingLeft="@dimen/dp_10"
                            android:text=""
                            android:gravity="center_vertical"
                            android:textColor="#FF9F9F9F"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="25dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>