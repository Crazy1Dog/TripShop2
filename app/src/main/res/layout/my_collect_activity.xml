<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FCFCFC"
    >
     <RelativeLayout 
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FFFCFCFC"
        >
        <Button
            android:id="@+id/btn_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_back_green"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:layout_centerInParent="true"    
            android:textSize="17sp"      
            android:textColor="#3C3F46"  
            />
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEBEBEB"
        />
    <ListView
        android:id="@+id/lv_mycollect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:visibility="gone"
        />
    <RelativeLayout 
        android:id="@+id/rl_mycollect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/iv_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_default_collect"
            android:layout_marginTop="156dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_my_order"
            android:text="暂无收藏"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:textSize="16sp"
            android:textColor="#454545"
            />
    </RelativeLayout>

</LinearLayout>
