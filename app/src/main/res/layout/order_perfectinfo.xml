<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/main_layout" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/line_quanbu" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:background="#FFF8F8F8"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/order_state_Imbt"
                    android:layout_width="10dip"
                    android:layout_height="match_parent"
                    android:background="#FF50D2C2" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:background="#FFF8F8F8"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/lineyuding_biaoti_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text=""
                        android:textColor="#FF4A4A4A"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预订人  "
                                android:textColor="#FF7E7E7E"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/order_contact_name_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:text=""
                                android:textColor="#FF000000"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/order_contact_mobile_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:text=""
                                android:textColor="#FF000000"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="出游时间 "
                                android:textColor="#FF7E7E7E"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/order_contact_gotime_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text=""
                                android:textColor="#FF000000"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="出行人数  "
                                android:textColor="#FF7E7E7E"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/order_contact_adult_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text=""
                                android:textColor="#FF000000"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/order_contact_child_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:text=""
                                android:textColor="#FF000000"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/order_contact_baby_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:text="5婴儿"
                                android:textColor="#FF000000"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/dingdan_pic_title_point" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:text="出行名单"
                        android:textColor="#FF50D2C2"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@mipmap/dingdan_pic_title_point" />
                </LinearLayout>

            

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="#FFF8F8F8"
                    android:orientation="vertical" >

                    <include layout="@layout/orderinfo" />

                   
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineDetails_yuding_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:background="#FF50D2C2"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认提交"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="25dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>